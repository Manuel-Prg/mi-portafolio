---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link: string;
}

const { title, description, image, tags, link } = Astro.props;
---

<div class="project-card">
  <img src={image} alt={title} class="project-image" />
  <div class="project-content">
    <h3 class="project-title">{title}</h3>
    <p class="project-description">{description}</p>
    <div class="tags">
      {tags.map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>
</div>

<style>
  .project-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
  }

  :global(body.light-mode) .project-card {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
  }

  .project-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-title {
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .project-description {
    color: #a0a0a0;
    margin-bottom: 1rem;
    line-height: 1.6;
    transition: color 0.3s;
  }

  :global(body.light-mode) .project-description {
    color: #666;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    background: rgba(102, 126, 234, 0.2);
    border-radius: 20px;
    font-size: 0.85rem;
    color: #667eea;
    border: 1px solid rgba(102, 126, 234, 0.3);
  }
</style>